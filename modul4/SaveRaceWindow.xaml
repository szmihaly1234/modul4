<Window x:Class="modul4.SaveRaceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:modul4"
        mc:Ignorable="d"
        Title="SaveRaceWindow" Height="350" Width="400">
    <Grid>
        <StackPanel>
            <Label Content="Verseny neve" Padding="20" Background="Gray" FontWeight="Bold"></Label>
            <TextBox x:Name="race_name" Padding="20"></TextBox>
            <Label Content="Verseny dátuma" Padding="20" Background="Gray" FontWeight="Bold"></Label>
            <TextBox x:Name="race_date" Padding="20"></TextBox>
            <Button x:Name="save" Content="Save" Padding="20" Click="save_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
